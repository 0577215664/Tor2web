#!/usr/bin/env python
# -*- encoding: utf-8 -*-

import tor2web

import os
import prctl
import signal
import sys
from subprocess import call

def NullSysHook(etype, value, tb):
    pass

sys.excepthook = NullSysHook
prctl.set_pdeathsig(signal.SIGINT)
prctl.set_proctitle("tor2web")

t2w = os.path.abspath(os.path.join(os.path.dirname(tor2web.__file__), 't2w.py'))

args = ["python", t2w]
args += sys.argv[1:]

try: 
    exit(call(args))
except Exception:
    exit(1)
